#------------------------------------------------------------------------------
# Global Settings:
#------------------------------------------------------------------------------

[global]

    # Network Options:
<% if scope.lookupvar('samba::workgroup') != :undef -%>    workgroup = <%= scope.lookupvar('samba::workgroup') %>
<% end -%>
<% if scope.lookupvar('samba::server_string') != :undef -%>    server string = <%= scope.lookupvar('samba::server_string') %>
<% end -%>
<% if scope.lookupvar('samba::netbios_name') != :undef -%>    netbios name = <%= scope.lookupvar('samba::netbios_name') %>
<% end -%>
<% if scope.lookupvar('samba::interfaces') != :undef -%>    interfaces = <%= scope.lookupvar('samba::interfaces') %>
<% end -%>
<% if scope.lookupvar('samba::hosts_allow') != :undef -%>    hosts allow = <%= scope.lookupvar('samba::hosts_allow') %>
<% end -%>

    # Logging Options:
<% if scope.lookupvar('samba::log_file') != :undef -%>    log file = <%= scope.lookupvar('samba::log_file') %>
<% end -%>
<% if scope.lookupvar('samba::max_log_size') != :undef -%>    max log size = <%= scope.lookupvar('samba::max_log_size') %>
<% end -%>

    # Server Options:
<% if scope.lookupvar('samba::security') != :undef -%>    security = <%= scope.lookupvar('samba::security') %>
<% end -%>
<% if scope.lookupvar('samba::passdb_backend') != :undef -%>    passdb backend = <%= scope.lookupvar('samba::passdb_backend') %>
<% end -%>
<% if scope.lookupvar('samba::realm') != :undef -%>    realm = <%= scope.lookupvar('samba::realm') %>
<% end -%>
<% if scope.lookupvar('samba::password_server') != :undef -%>    password server = <%= scope.lookupvar('samba::password_server') %>
<% end -%>

    # Printing Options:
<% if scope.lookupvar('samba::load_printers') != :undef -%>    load printers = <%= scope.lookupvar('samba::load_printers') %>
<% end -%>
<% if scope.lookupvar('samba::cups_options') != :undef -%>    cups options = <%= scope.lookupvar('samba::cups_options') %>
<% end -%>

#------------------------------------------------------------------------------
# Share Definitions:
#------------------------------------------------------------------------------

[homes]

    comment = Home Directories
    browseable = no
    writable = yes
